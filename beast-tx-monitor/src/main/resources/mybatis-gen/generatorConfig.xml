<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="admin" targetRuntime="MyBatis3">
   		 <commentGenerator>
	        <property name="suppressDate" value="true"/>
	        <property name="suppressAllComments" value="true" />
    	</commentGenerator>
    	
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3307/creditcard?useUnicode=true&amp;characterEncoding=utf-8"
                        userId="root"
                        password="root">
        </jdbcConnection>
        
        <javaTypeResolver >
	    	<property name="forceBigDecimals" value="false" />
	    </javaTypeResolver>

        <javaModelGenerator targetPackage="com.creditcard.management.admin.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="/" targetProject="src/main/resources/mybatis/admin">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.creditcard.management.admin.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>
        
        <table schema="creditcard" tableName="admin" domainObjectName="Admin" >
        	<generatedKey column="id" sqlStatement="select LAST_INSERT_ID()" identity="true"/>
        </table>
    </context>
</generatorConfiguration>